/* 水平间距 */
.bottom_box {
  display: flex;
  border-top: 1px solid gray;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 0 10px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.bottom_box .middle .red {
  color: #c00000;
}
.bottom_box .right {
  text-align: center;
  width: 100px;
  background-color: #c00000;
  color: #fff;
  line-height: 50px;
}
.cart_box {
  display: flex;
  font-size: 14px;
  padding: 10rpx;
  border-bottom: 1px solid gray;
}
.cart_box .left {
  display: flex;
  align-items: center;
}
.cart_box .right {
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_box image {
  width: 200rpx;
  height: 200rpx;
}
.cart_box .box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart_box .box text {
  color: #c00000;
}
.cart_box .box .btn_group {
  display: flex;
}
.cart_box .box .btn_group .ipt {
  width: 100rpx;
  height: 50rpx;
}
.cart_box .box .btn_group .btn {
  width: 100rpx;
}

